<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".ui.ReviewsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/reviews_empty_text"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/purple"
                android:text="@string/reviews_empty"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="gone"/>

        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/reviews_book_name_filter"
                android:autofillHints=""
                android:background="@drawable/custom_edittext"
                android:drawableStart="@drawable/outline_book_24"
                android:drawablePadding="8dp"
                android:hint="@string/book_name_filter_field_hint"
                android:inputType="text"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="70dp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/reviews_sort_button"
                android:layout_marginEnd="8dp" />

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/reviews_sort_button"
                android:src="@drawable/outline_arrow_downward_alt_24"
                android:background="@null"
                android:layout_marginTop="68dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        <ListView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/listview"
                android:scrollbars="vertical"
                android:layout_marginTop="25dp"
                tools:listitem="@layout/reviews_item"
                android:divider="@android:color/transparent"
                android:dividerHeight="10.0sp"
                app:layout_constraintTop_toBottomOf="@id/reviews_book_name_filter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>